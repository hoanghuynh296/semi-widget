<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SmartTextView">
        <attr name="smtv_fillColor" format="color"/>
        <attr name="smtv_borderColor" format="color"/>
        <attr name="smtv_rippleColor" format="color"/>
        <attr name="smtv_borderWidth" format="dimension"/>
        <attr name="smtv_radius" format="dimension"/>
        <attr name="smtv_dashWidth" format="dimension"/>
        <attr name="smtv_dashGap" format="dimension"/>
        <attr name="smtv_shape">
            <enum name="RECTANGLE" value="0"/>
            <enum name="OVAL" value="1"/>
            <enum name="LINE" value="2"/>
            <enum name="RING" value="3"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="StateTextView">
        <attr name="smtv_backgroundSelectedColor" format="color"/>
        <attr name="smtv_backgroundUnSelectedColor" format="color"/>
        <attr name="smtv_textSelectedColor" format="color"/>
        <attr name="smtv_textUnSelectedColor" format="color"/>
        <attr name="smtv_isSelected" format="boolean"/>
        <attr name="smtv_backgroundEnableColor" format="color"/>
        <attr name="smtv_backgroundDisableColor" format="color"/>
        <attr name="smtv_textEnableColor" format="color"/>
        <attr name="smtv_textDisableColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="LockableViewPager">
        <attr name="lvp_isLockSwipe" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="SemiSpinner">
        <attr name="smsp_itemTextColor" format="color"/>
        <attr name="smsp_itemTextSelectedColor" format="color"/>
        <attr name="smsp_itemTextSize" format="dimension"/>
        <attr name="smsp_itemBgSelectedColor" format="color"/>
        <attr name="smsp_itemBgUnSelectedColor" format="color"/>
        <attr name="smsp_hideArrow" format="boolean"/>
        <attr name="smsp_arrowEnableDrawable" format="reference"/>
        <attr name="smsp_arrowDisableDrawable" format="reference"/>
        <attr name="smsp_popupMaxHeight" format="dimension"/>
        <attr name="smsp_popupElevation" format="dimension"/>
        <attr name="smsp_bgPopupColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="StateIconView">
        <attr name="smi_drawableSelected" format="reference"/>
        <attr name="smi_drawableUnSelected" format="reference"/>
        <attr name="smi_drawableEnable" format="reference"/>
        <attr name="smi_drawableDisable" format="reference"/>
        <attr name="smi_isSelected" format="boolean"/>
        <attr name="smi_isEnable" format="boolean"/>
        <attr name="smi_backgroundRadius" format="dimension"/>
        <attr name="smi_backgroundSelectedColor" format="color"/>
        <attr name="smi_backgroundUnSelectedColor" format="color"/>
        <attr name="smi_backgroundShape">
            <enum name="RECTANGLE" value="0"/>
            <enum name="OVAL" value="1"/>
        </attr>
    </declare-styleable>
</resources>