<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@android:color/white">

    <vn.semicolon.base.widget.spinner.SemiSpinner
            android:id="@+id/spinnerTest"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            app:smtv_radius="5dp"
            android:enabled="true"
            app:smtv_fillColor="#f2f2f2"
            android:text="Simon"
    />
    <vn.semicolon.base.widget.spinner.SemiSpinner
            android:id="@+id/spinnerTest1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            app:smtv_radius="5dp"
            app:smtv_backgroundEnableColor="#f2f2f2"
            app:smtv_textEnableColor="#000000"
            android:enabled="false"
            app:smtv_fillColor="#f2f2f2"
            android:text="Simon"
    />

    <vn.semicolon.base.widget.customview.StateIconView
            android:id="@+id/iconState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="20dp"
            app:smi_backgroundRadius="5dp"
            app:smi_backgroundShape="OVAL"
            app:smi_backgroundSelectedColor="@color/colorPrimary"
            app:smi_backgroundUnSelectedColor="@color/colorAccent"
            app:smi_drawableSelected="@drawable/ic_arrow_down_black"
            app:smi_drawableUnSelected="@drawable/ic_arrow_down_grey"/>

    <vn.semicolon.base.widget.customview.SmartCardView
            android:id="@+id/smartCVTest"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:focusable="true"
            app:smcv_borderColor="#000000"
            app:smcv_borderWidth="2dp"
            app:cardCornerRadius="10dp"
            app:smcv_dashGap="10dp"
            app:smcv_dashWidth="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:smtv_rippleColor="@color/colorPrimary">

    </vn.semicolon.base.widget.customview.SmartCardView>
</LinearLayout>