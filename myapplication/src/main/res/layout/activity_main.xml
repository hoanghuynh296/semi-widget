<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@android:color/white">

    <vn.semicolon.base.widget.spinner.SemiSpinner
            android:id="@+id/spinnerTest"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            app:smtv_radius="5dp"
            android:enabled="true"
            app:smtv_fillColor="#f2f2f2"
            android:text="Simon"
    />
    <vn.semicolon.base.widget.spinner.SemiSpinner
            android:id="@+id/spinnerTest1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            app:smtv_radius="5dp"
            app:smtv_backgroundEnableColor="#f2f2f2"
            app:smtv_textEnableColor="#000000"
            android:enabled="false"
            app:smtv_fillColor="#f2f2f2"
            android:text="Simon"
    />
    <vn.semicolon.base.widget.customview.StateIconView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:smi_isSelected="true"
            app:smi_drawableSelected="@drawable/ic_arrow_down_black"
            app:smi_drawableUnSelected="@drawable/ic_arrow_down_grey"/>
</LinearLayout>