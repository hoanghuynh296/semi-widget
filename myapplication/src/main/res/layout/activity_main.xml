<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <vn.semicolon.base.widget.customview.SmartEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello work"
            android:layout_margin="20dp"
            app:smtv_borderWidth="1dp"
            android:padding="10dp"
            app:smtv_borderColor="#0f0f0f"/>

    <vn.semicolon.base.widget.customview.SmartTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:hint="Type here"
            android:padding="10dp"
            android:inputType="text"
            android:layout_marginStart="10dp"/>

    <vn.semicolon.base.widget.customview.StateTextView
            android:id="@+id/stateTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Simon Le"
            app:smtv_backgroundActiveColor="#00ff00"
            app:smtv_backgroundInActiveColor="#ff00ff"
            android:padding="10dp"
            app:smtv_textActiveColor="#0000ff"
            app:smtv_radius="10dp"
            android:layout_marginStart="10dp"/>
</LinearLayout>